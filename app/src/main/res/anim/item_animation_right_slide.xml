<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="@integer/anim_duration_long">

    <!--
    The one thing to note here is the android:fromXDelta="100%p" where the p is not a typo.
     When adding the p percentage is based of the parent.
     In this case it means that the view is translated 100% of the parents width, to the right.
    -->

    <translate
        android:fromXDelta="100%p"
        android:interpolator="@android:anim/decelerate_interpolator"
        android:toXDelta="0" />


    <alpha
        android:fromAlpha="0.5"
        android:interpolator="@android:anim/accelerate_decelerate_interpolator"
        android:toAlpha="1"
        />
</set>